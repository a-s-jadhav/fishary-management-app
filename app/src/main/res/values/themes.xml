<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FisharyManagement" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DenimBlue</item>
        <item name="colorPrimaryVariant">@color/GrayDim</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/DenimBlue</item>
        <item name="colorSecondaryVariant">@color/GrayDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">#707070</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/ic_edittext_field</item>
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">50sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="MyButtonStyle" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/ic_button</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="MyTextView" parent="android:Widget.TextView">
        <item name="fontFamily">@font/montserrat</item>
    </style>
</resources>